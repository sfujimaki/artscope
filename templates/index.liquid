<div class="p-front-articles">
  <div class="page-width">
    <h2 class="p-front-articles__heading">JOURNAL</h2>
    {% for blog in blogs.journal.articles %}
      {% if forloop.first == true %}
      <div class="c-grid">
        <div class="c-grid_item"> 
          <div class="p-front-articles__article p-front-articles__article__first">
            <img src="{{ blog.image | img_url: "original" }}"/>
            <div class="p-front-articles__article__box">
              <h3>{{ blog.title }}</h3>
            </div>
          </div>
          <div class="u-clearfix"></div>
        </div>
      </div>
        <div class="c-grid">
      {% else %}
        <div class="c-grid_item c-grid_item__m__3"> 
          <div class="p-front-articles__article p-front-articles__article__not-first">
            <img src="{{ blog.image | img_url: "original" }}"/>
            <div class="p-front-articles__article__box">
              <h3>{{ blog.title }}</h3>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
      </div>
    <div class="u-clearfix"></div>
    <div class="p-front-articles__other_button c-ghost-button">
      <a href="{{ blogs.journal.url }}">OTHER ITEMS&nbsp;&nbsp;></a>
    </div>
  </div>
</div>

<div class="p-front-products">
  <div class="page-width">
  <h2 class="p-front-products__heading">STORE</h2>
  <div class="c-grid">
    {% for product in collections.all.products limit: 4 %}
      <div class="c-grid_item c-grid_item__m__4"> 
        <div class="p-front-products__product">
          <div class="p-front-products__product__image-wrapper">
          <img src="{{ product.featured_image | img_url:  'original', crop: 'center'}}"/>
        </div>

          <h3>{{ product.title }}</h3>
        <span>価格: {{ product.price | money }}</span>
        </div>
      </div>
    {% endfor %}
  </div>  
  <div class="u-clearfix"></div>
  <div class="p-front-products__other_button c-ghost-button">
    <a href="{{ collections.all.url }}">OTHER ITEMS&nbsp;&nbsp;></a>
  </div>
  </div>
</div>



