/* mobile */
@media screen and (max-width: 640px) {
  .l-header,
  .inner {
      width: 100%;
      padding: 0;
  }
  .l-header {
      top: 0;
      /* position: fixed; */
      margin-top: 0;
  }
  /* Fixed reset */
  .l-header.fixed {
      padding-top: 0;
      background: transparent;
  }
  #mobile-head {
      background: #000; 
      width: 100%;
      height: 56px;
      z-index: 10000;
      position: relative;
  }
  .l-header.fixed .logo,
  .l-header .logo {
      position: absolute;
      left: 13px;
      top: 13px;
      color: #333;
      font-size: 26px;
  }
  #global-nav {
      position: absolute;
      /* 開いてないときは画面外に配置 */
      /* top: -500px; */
      left: 0px;
       top: 56px; 
      display:none;
      /* background: #333; */
      background: #000;
      width: 100%;
      text-align: center;
      padding: 10px 0;
      -webkit-transition: .5s ease-in-out;
      -moz-transition: .5s ease-in-out;
      transition: .5s ease-in-out;
      z-index: 10;
  }
  #global-nav ul {
      list-style: none;
      position: static;
      right: 0;
      bottom: 0;
      font-size: 14px;
  }
  #global-nav ul li {
      float: none;
      position: static;
      padding:0;
  }
  .l-header #global-nav ul li a,
  .l-header.fixed #global-nav ul li a {
      width: 100%;
      display: block;
      color: #fff;
      padding: 18px 0;
  }
  #nav-toggle {
      display: block;
  }
  /* #nav-toggle 切り替えアニメーション */
  .open #nav-toggle span:nth-child(1) {
      top: 11px;
      -webkit-transform: rotate(315deg);
      -moz-transform: rotate(315deg);
      transform: rotate(315deg);
  }
  .open #nav-toggle span:nth-child(2) {
      width: 0;
      left: 50%;
  }
  .open #nav-toggle span:nth-child(3) {
      top: 11px;
      -webkit-transform: rotate(-315deg);
      -moz-transform: rotate(-315deg);
      transform: rotate(-315deg);
  }
