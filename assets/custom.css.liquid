/* 【CSS】世にも簡単なレスポンシブの1カラム2カラムの書き方 | JavaScriptに関するお知らせ https://jsnotice.com/posts/2020-05-09/ */
.c-grid {
  display: flex;
  flex-wrap: wrap;

  margin-right: 12px  * -1;
  margin-bottom: 12px * -2;
  margin-left: 12px  * -1;
}
.c-grid_item {
  margin-bottom: 12px * 2;
  padding-right: 12px;
  padding-left: 12px;
  width: 100%;
}

@media (min-width: 750px) {
  .c-grid_item__m__3 {
    width: calc(100% / 3);
  }
  .c-grid_item__m__4 {
    width: calc(100% / 4);
  }
}

